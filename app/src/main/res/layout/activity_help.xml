<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sw551.fairfield.healthcheq.HelpActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blue">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"></FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Profile Setup"
                android:textColor="@color/black"
                android:onClick="viewProfileSetup"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Goal Setup"
                android:textColor="@color/black"
                android:onClick="viewGoalSetup"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="About"
                android:textColor="@color/black"
                android:onClick="viewAbout"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textViewTest"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
