<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sw551.fairfield.healthcheq.NearbyPlacesActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/blue">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2.2"></FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/title_fitness_center"
                android:textColor="@color/black"
                android:id="@+id/buttonFitness"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/title_health_centers"
                android:textColor="@color/black"
                android:id="@+id/buttonHealth"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="@string/title_food_diet"
                android:textColor="@color/black"
                android:id="@+id/buttonFood"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3">

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>