<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" tools:context="com.sw551.fairfield.healthcheq.SettingsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@drawable/healthcheq">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"></FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Add Scale"
                android:onClick="addScale"
                android:id="@+id/button4"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"

                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Weight Units"
                android:onClick="selectWeightUnit"
                android:id="@+id/button5"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Edit Profile"
                android:onClick="viewProfile"
                android:id="@+id/button6"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

            <Space
                android:layout_width="20px"
                android:layout_height="40px" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:text="Help"
                android:id="@+id/button7"
                android:layout_gravity="center_horizontal"
                android:minWidth="200sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textViewTest"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center" />

        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
